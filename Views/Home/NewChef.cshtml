@model Chef
<h1 class="text-center"> Add a new Chef!</h1>
<a href="/">Home</a>
<hr>


        <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <form asp-action="NewChef" asp-controller="Home" method="post"> 
            <div class="form-group row">
                <span asp-validation-for="FirstName"></span>
                <label asp-for="FirstName" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" id="colFormLabel"  asp-for="FirstName" placeholder="FirstName">
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="LastName"></span>
                <label asp-for="LastName" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" id="colFormLabel"  asp-for="LastName" placeholder="LastName">
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="DateofBirth"></span>
                <label asp-for="DateofBirth" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="date" class="form-control form-control-sm" id="colFormLabel"  asp-for="DateofBirth" >
                </div>
            </div>
            
            
            <button type="submit">Add Chef</button>
            </form>
        </div>
        <div class="col-2"></div>
    </div>