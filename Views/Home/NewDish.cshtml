@model NewDishModel


<h1 class="text-center"> Add a new Dish!</h1>
<a href="/">Home</a>
<hr>


        <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <form asp-action="NewDish" asp-controller="Home" method="post"> 
            
            <div class="form-group row">
                <span asp-validation-for="DishName"></span>
                <label asp-for="DishName" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" id="colFormLabel"  asp-for="DishName" placeholder="DishName">
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Calories"></span>
                <label asp-for="Calories" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="number" class="form-control form-control-sm" id="colFormLabel"  asp-for="Calories" placeholder="Calories">
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Tastiness"></span>
                <label asp-for="Tastiness" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                    <select class="custom-select mr-sm-2"  asp-for="Tastiness" id="inlineFormCustomSelect">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="ChefId"></span>
                <label asp-for="ChefId" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                    <select class="custom-select mr-sm-2"  asp-for="ChefId" id="inlineFormCustomSelect">
                   @foreach (var currentchef in Model.allchefs)
                   {
                       <option value=@currentchef.ChefId> @currentchef.FirstName  @currentchef.LastName</option>
                   }
                   
                </select>
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description" class="col-sm-2 col-form-label "></label> 
                <div class="col-sm-10">
                <textarea class="form-control form-control-lg" id="colFormLabelLg" placeholder="Description"  asp-for="Description"> </textarea>
                </div>
            </div>
            <button type="submit">Add Dish</button>
            </form>
        </div>
        <div class="col-2"></div>
    </div>